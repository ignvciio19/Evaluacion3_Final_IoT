<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BREAKING NEWS"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF"
            android:background="#D32F2F"
            android:paddingStart="12dp"
            android:paddingEnd="24dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvTituloItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÃTULO DE LA NOTICIA"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvBajadaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen de la noticia..."
            android:textSize="16sp"
            android:textColor="#444444"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"/>

        <ImageView
            android:id="@+id/ivNoticiaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Imagen noticia"/>

        <TextView
            android:id="@+id/tvCuerpoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuerpo de la noticia..."
            android:textSize="14sp"
            android:textColor="#222222"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>